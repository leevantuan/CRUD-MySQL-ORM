<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/styles.css" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
            crossorigin="anonymous"
        />
        <title>Product Page</title>
    </head>
    <body>
        <div>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/create">Create Users</a></li>
                <li><a href="/API/category">Category</a></li>
                <li><a href="/API/create-category">Create Category</a></li>
                <li><a class="active" href="/API/product">Product</a></li>
                <li><a href="/API/create-product">Create Product</a></li>
            </ul>
        </div>
        <div class="container col-10">
            <h1>List Products</h1>
            <table class="table table-hover">
                <thead>
                    <tr class="bg-warning">
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Detail</th>
                        <th scope="col">Image Link</th>
                        <th scope="col">Sale</th>
                        <th scope="col">New</th>
                        <th scope="col">Category</th>
                        <th scope="col">List Img ID</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(data) { %>
                    <tr>
                        <th scope="row"><%= data.id %></th>
                        <td><%= data.Name %></td>
                        <td>$ <%= data.Price %></td>
                        <td><%= data.Detail %></td>
                        <td><%= data.Image %></td>
                        <td><%= data.Sale %></td>
                        <td><%= data.New %></td>
                        <td><%= data.Category %></td>
                        <td><%= data.ListImgID %></td>
                        <td><%= data.Quantity %></td>
                        <td>
                            <button type="button" class="btn btn-warning">
                                <a href="/API/update-product/<%= data.id %>" class="text-white"
                                    >Edit</a
                                >
                            </button>
                            <button type="button" class="btn btn-danger">
                                <a href="/API/delete-product/<%= data.id %>" class="text-white"
                                    >Delete</a
                                >
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
